    <div id="top-container" class="container-fluid">
        <h1 id="main-title" class="text-center">Encontre o seu role</h1>
        <p id="main-subtitle" class="text-center">Somos o site que abrange os melhores eventos de São Paulo</p>
        <form id="search-form" class="form-inline" action="/" method="GET">
            <div class="form-group col-md-10">
                <input type="text" class="form-control" id="evento" name="evento" placeholder="Digite o evento que está buscando">
                </div>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary">Procurar</button>
            </div>
        </form>
    </div>
    <main>
        <div id="eventos-container" class="container">
            <div class="row">
                <div class="col-md-12">
                {{#if search}}
                <h2 id="evento-list-title">Buscando eventos que contem: {{search}}</h2>
                {{else}}
                <h2 id="evento-list-title">Veja os nossos eventos em destaque</h2>
                {{/if}}
                <ul id="evento-list" class="list-group">
                    {{#each eventos}}
                    <li class="list-group-item {{#if dataValues.new_evento }}new-evento{{/if}}">
                        <img src="C:\Users\Larissa\Desktop\Projeto-USJT\Projeto-USJT\public\img\site.jpeg" alt="Site">
                        <p>{{dataValues.site}}</p>
                        <h2>{{dataValues.title}}</h2>
                        <p> R${{dataValues.value}}</p>
                        <span class="new-evento-label">Nova</span>
                        <a class="btn btn-primary" href="/eventos/view/{{dataValues.id}}">Ver evento</a>
                    </li>
                 {{/each}}
                </div>
             </div>
        </div>
    </main>